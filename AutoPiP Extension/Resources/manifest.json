{
    "manifest_version": 2,
    "name": "AutoPiP",
    "version": "0.1",
    "description": "Automatically enables Picture-in-Picture mode when switching tabs",
    "icons": {
         "48": "images/icon-48.png",
         "96": "images/icon-96.png",
         "128": "images/icon-128.png",
         "256": "images/icon-256.png"
     },
    "permissions": [
        "activeTab",
        "<all_urls>",
        "tabs"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
    }]
}
